<style>
    .container {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-flow: row wrap;
  flex-flow: row wrap;
}

.c1, .c2 {
  width: 100%;
}

@media (min-width: 600px) {
  .c1 {
    width: 50%;
    -webkit-order: 2;
    order: 2;
  }

  .c2 {
    width: 50%;
    -webkit-order: 1;
    order: 1;
  }
}


@media (min-width: 800px) {
  .c1 {
    width: 60%;
  }
  .c2 {
    width: 40%;
  }
}
</style>
<h1 class="mb-3">Food Show</h1></br>
<div class="container">
    <div class="c2 card p-3">
        <% if @food.image.attached? %>
  <%= image_tag @food.image, class:"m-3" %>
  <% end %>
  <div class="card-body">
    <h4 class="card-title"><%= @food.name %></h4>
    <p class="card-text">
      <strong>Description:</strong>
      <%= @food.description %>
    </p>
    <p class="card-text">
        <strong>Price:</strong>
        <%= @food.price %>
    </p>
    
    <%= link_to 'Edit', edit_restaurant_food_path(@restaurant, @food), class:"btn btn-warning btn-sm" %> |
    <%= link_to "Delete", [@restaurant, @food], :method  => :delete, class:"btn btn-danger btn-sm" %> |
    <%= link_to 'Back', restaurant_path(@restaurant), class:"btn btn-secondary btn-sm" %>
    
  </div>
    </div>
    <div class="c1 p-3">
        <h3>Comment</h3>

        <table class="table">
            <thead>
                <tr>
                    <th>お名前</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <% found = 0 %>
            <tbody>
                <% @food.food_reviews.each do |food_review| %>
                  <tr>
                    <td><%= food_review.user_id %></td>
                    <td><%= food_review.review %></td>
                    <% if food_review.user_id == current_user.id %>
                        <td><%= link_to 'Edit', edit_restaurant_food_food_review_path(@restaurant,@food,food_review), class:"btn btn-warning btn-sm" %></td>
                        <td><%= link_to 'Delete', [@restaurant,@food,food_review], method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
                        <% found = 1 %>
                    <% end %>
                  </tr>
                <% end %>
            </tbody>
        </table>
            <% if found == 0 %>
                <%= link_to "Add comment", new_restaurant_food_food_review_path(@restaurant,@food), class:"btn btn-primary btn-sm" %>
            <% end %>
    </div>
</div>

