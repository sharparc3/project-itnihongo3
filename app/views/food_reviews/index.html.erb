<p id="notice"><%= notice %></p>

<h1>Food Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Restaurant</th>
      <th>Food</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_reviews.each do |food_review| %>
      <tr>
        <td><%= food_review.user_id %></td>
        <td><%= food_review.restaurant_id %></td>
        <td><%= food_review.food_id %></td>
        <td><%= food_review.review %></td>

        <td><%= link_to 'Edit', edit_restaurant_food_food_review_path(@restaurant,@food,food_review) %></td>
        <td><%= link_to 'Destroy', [@restaurant,@food,food_review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Go back', restaurant_food_path(@restaurant,@food) %>
