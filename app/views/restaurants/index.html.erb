<h1>レストラン一覧</h1>

<table class="table w-50">
  <thead>
    <tr>
      <th>レストラン名</th>
      <th>レストランのアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.addresss %></td>
      <td><%= link_to '詳細', 
          restaurant,
          class: "btn btn-outline-primary btn-sm btn-block" 
        %></td>
      <td><%= link_to '編集', 
          edit_restaurant_path(restaurant),
          class: 'btn btn-outline-warning btn-sm btn-block' 
        %></td>
      <td><%= link_to '削除', 
          restaurant, method: :delete, 
          data: { confirm: 'Are you sure?' },
          class: 'btn btn-outline-danger btn-sm btn-block'
        %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '追加', new_restaurant_path, class:"btn btn-primary"  %>
